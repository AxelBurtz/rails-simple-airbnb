<h1>Flats</h1>

<ul class="liste">
<% @flats.each do |flat| %>
<div>
  <div class="column"></div>
    <li>Name: <%= link_to flat.name, flat_path(flat) %></li>
    <li>Address: <%= flat.address %></li>
    <li>Price Per Night: <%= flat.price_per_night %></li>
    <li>Number of Guests: <%= flat.number_of_guests %></li>
    <% end %>
  </ul>
  <div class="column"></div>
</div>

<%= link_to "Add flat", new_flat_path %>
